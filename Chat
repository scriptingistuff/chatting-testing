Instance.new("UICorner", Input)

-- LOGIC FUNCTIONS --

local function postToFirebase(msg, senderName)
    local payload = HttpService:JSONEncode({
        user = senderName or Players.LocalPlayer.Name,
        text = msg,
        time = os.time()
    })
    local request = (syn and syn.request) or (http and http.request) or request
    pcall(function()
        request({
            Url = DB_PATH, 
            Method = "POST", 
            Headers = {["Content-Type"] = "application/json"}, 
            Body = payload
        })
    end)
end

local function askGroq(question)
    local url = "https://api.groq.com/openai/v1/chat/completions"
    local payload = HttpService:JSONEncode({
        model = "llama3-8b-8192",
        messages = {{role = "user", content = question}}
    })
    
    local request = (syn and syn.request) or (http and http.request) or request
    local success, response = pcall(function()
        return request({
            Url = url,
            Method = "POST",
            Headers = {
                ["Content-Type"] = "application/json",
                ["Authorization"] = "Bearer " .. GROQ_KEY
            },
            Body = payload
        })
    end)
    
    if success and response.Success then
        local data = HttpService:JSONDecode(response.Body)
        local aiReply = data.choices[1].message.content
        postToFirebase(aiReply, "ðŸ¤– GROQ")
    end
end

-- Update Loop (Discord Flow)
task.spawn(function()
    while task.wait(3) do
        local request = (syn and syn.request) or (http and http.request) or request
        local success, res = pcall(function() return request({Url = DB_PATH, Method = "GET"}) end)
        if success and res.Success then
            local data = HttpService:JSONDecode(res.Body)
            if type(data) == "table" then
                local messageList = {}
                for id, entry in pairs(data) do table.insert(messageList, entry) end
                table.sort(messageList, function(a, b) return (a.time or 0) < (b.time or 0) end)
                
                local finalLog = ""
                for _, entry in ipairs(messageList) do
                    finalLog = finalLog .. "[" .. tostring(entry.user) .. "]: " .. tostring(entry.text) .. "\n"
                end
                Output.Text = finalLog
                Scroll.CanvasPosition = Vector2.new(0, Output.AbsoluteSize.Y + 1000)
            end
        end
    end
end)

-- CONTROLS & INPUT --
Input.FocusLost:Connect(function(enter)
    if enter and Input.Text ~= "" then
        local t = Input.Text
        Input.Text = ""
        
        -- FIXED: Trigger Groq if message starts with /gemini
        if t:sub(1,8):lower() == "/gemini " then
            local question = t:sub(9)
            postToFirebase(t) -- Posts your "/gemini hello?" so others see it
            askGroq(question) -- Triggers the AI
        else
            postToFirebase(t) -- Just normal chat
        end
    end
end)

local minimized = false
MinBtn.MouseButton1Click:Connect(function()
    minimized = not minimized
    local targetSize = minimized and UDim2.new(0, 320, 0, 40) or UDim2.new(0, 320, 0, 350)
    TweenService:Create(MainFrame, TweenInfo.new(0.3), {Size = targetSize}):Play()
    Scroll.Visible, Input.Visible, MinBtn.Text = not minimized, not minimized, (minimized and "+" or "-")
end)

CloseBtn.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)

local dragging, dragStart, startPos
Header.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true dragStart = input.Position startPos = MainFrame.Position
    end
end)
UserInputService.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)
UserInputService.InputEnded:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end end)
