-- LOGIC --

local function postToFirebase(msg, senderName)
    local payload = HttpService:JSONEncode({
        user = senderName or Players.LocalPlayer.Name,
        text = msg,
        time = os.time()
    })
    local request = (syn and syn.request) or (http and http.request) or request
    pcall(function()
        request({Url = DB_PATH, Method = "POST", Headers = {["Content-Type"] = "application/json"}, Body = payload})
    end)
end

local function askGemini(question)
    local url = "https://api.groq.com/openai/v1/chat/completions"
    local payload = HttpService:JSONEncode({
        model = "llama-3.3-70b-versatile",
        messages = {{role = "user", content = question}}
    })
    local request = (syn and syn.request) or (http and http.request) or request
    local success, response = pcall(function()
        return request({
            Url = url, Method = "POST", 
            Headers = {["Content-Type"] = "application/json", ["Authorization"] = "Bearer " .. GROQ_KEY},
            Body = payload
        })
    end)
    if success and response.Success then
        local data = HttpService:JSONDecode(response.Body)
        postToFirebase(data.choices[1].message.content, "✨ GEMINI")
    end
end

-- Update Loop
task.spawn(function()
    while task.wait(3) do
        local request = (syn and syn.request) or (http and http.request) or request
        local success, res = pcall(function() return request({Url = DB_PATH, Method = "GET"}) end)
        if success and res.Success then
            local data = HttpService:JSONDecode(res.Body)
            if type(data) == "table" then
                local messageList = {}
                for id, entry in pairs(data) do table.insert(messageList, entry) end
                table.sort(messageList, function(a, b) return (a.time or 0) < (b.time or 0) end)
                
                local finalLog = ""
                for _, entry in ipairs(messageList) do
                    finalLog = finalLog .. "[" .. tostring(entry.user) .. "]: " .. tostring(entry.text) .. "\n"
                end
                
                local isAtBottom = Scroll.CanvasPosition.Y >= (Scroll.AbsoluteCanvasSize.Y - Scroll.AbsoluteSize.Y - 30)
                Output.Text = finalLog
                
                if isAtBottom then
                    task.wait(0.1)
                    Scroll.CanvasPosition = Vector2.new(0, Scroll.AbsoluteCanvasSize.Y)
                end
            end
        end
    end
end)

-- Input
Input.FocusLost:Connect(function(enter)
    if enter and Input.Text ~= "" then
        local t = Input.Text
        Input.Text = ""
        
        -- Local instant display
        Output.Text = Output.Text .. "[" .. Players.LocalPlayer.Name .. "]: " .. t .. "\n"
        Scroll.CanvasPosition = Vector2.new(0, Scroll.AbsoluteCanvasSize.Y + 100)

        local command = t:match("^/gemini%s+(.*)")
        if command then
            postToFirebase(t)
            task.spawn(function() askGemini(command) end)
        else
            postToFirebase(t)
        end
    end
end)

-- Buttons & Dragging
local function createBtn(text, color, pos)
    local btn = Instance.new("TextButton", MainFrame)
    btn.Size = UDim2.new(0, 25, 0, 25)
    btn.Position = pos
    btn.BackgroundColor3 = color
    btn.Text = text
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Font = Enum.Font.GothamBold
    Instance.new("UICorner", btn).CornerRadius = UDim.new(1, 0)
    return btn
end
local CloseBtn = createBtn("×", Color3.fromRGB(220, 70, 70), UDim2.new(1, -35, 0, 8))
local MinBtn = createBtn("-", Color3.fromRGB(60, 60, 75), UDim2.new(1, -65, 0, 8))

local minimized = false
MinBtn.MouseButton1Click:Connect(function()
    minimized = not minimized
    MainFrame:TweenSize(minimized and UDim2.new(0, 320, 0, 40) or UDim2.new(0, 320, 0, 350), "Out", "Quad", 0.3, true)
    Scroll.Visible, Input.Visible, MinBtn.Text = not minimized, not minimized, (minimized and "+" or "-")
end)
CloseBtn.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)

local dragging, dragStart, startPos
Header.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true dragStart = input.Position startPos = MainFrame.Position
    end
end)
UserInputService.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)
UserInputService.InputEnded:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end end)
